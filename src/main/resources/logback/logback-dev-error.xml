<appender name="DEVERRORROLLFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <immediateFlush>true</immediateFlush>
    <!-- 파일 위치 -->
    <file>/home/ubuntu/logs/PERMIT-ERROR-LOG.log</file>

    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
        <providers>
            <timestamp>
                <timeZone>Asia/Seoul</timeZone>
                <pattern>yyyy-MM-dd HH:mm:ss.SSS</pattern>
                <fieldName>time</fieldName>
            </timestamp>
            <threadName/>
            <logLevel/>
            <loggerName/>
            <mdc/>
            <arguments/>
            <message/>
        </providers>
    </encoder>

    <filter class="ch.qos.logback.classic.filter.LevelFilter">
        <level>ERROR</level>
        <onMatch>ACCEPT</onMatch>
        <onMismatch>DENY</onMismatch>
    </filter>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>/home/ubuntu/logs/PERMIT-ERROR-LOG-%d{yyyy-MM-dd}-%i-log.zip</fileNamePattern>
        <maxFileSize>20MB</maxFileSize>
        <maxHistory>30</maxHistory>
        <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>
</appender>
