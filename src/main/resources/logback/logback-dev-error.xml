<appender name="DEVERRORROLLFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <immediateFlush>true</immediateFlush>
    <!-- 파일 위치 -->
    <file>/home/ubuntu/logs/PERMIT-ERROR-LOG.log</file>

    <encoder>
        <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] [%logger{0}] [traceId=%X{traceId:-]} - %msg%n</pattern>
    </encoder>

    <filter class="ch.qos.logback.classic.filter.LevelFilter">
        <level>ERROR</level>
        <onMatch>ACCEPT</onMatch>
        <onMismatch>DENY</onMismatch>
    </filter>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>/home/ubuntu/logs/PERMIT-ERROR-LOG-%d{yyyy-MM-dd}-%i-log.zip</fileNamePattern>
        <maxFileSize>20MB</maxFileSize>
        <maxHistory>30</maxHistory>
        <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>
</appender>
